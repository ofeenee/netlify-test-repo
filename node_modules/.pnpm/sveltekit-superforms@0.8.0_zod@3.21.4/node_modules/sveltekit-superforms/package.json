    "form",
    "validation",
    "zod",
    "forms"
  ],
  "license": "MIT",
  "homepage": "https://superforms.vercel.app",
  "bugs": "https://github.com/ciscoheat/sveltekit-superforms/issues",
  "repository": {
    "url": "https://github.com/ciscoheat/sveltekit-superforms"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ciscoheat"
    },
    {
      "type": "ko-fi",
